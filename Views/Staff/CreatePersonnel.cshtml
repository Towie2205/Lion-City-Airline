@model web2020apr_p08_t5.Models.Staff

@{
    ViewData["Title"] = "CreatePersonnel";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/aboutus-style.css" rel="stylesheet" />

    <title>Lion City Airline</title>

    <style>
        body{
            background-color: floralwhite;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <nav>
                <img src="~/images/login page image.png" style="width: 20%">
                <ul class="nav-links">

                    <li><a href="~/Home/AboutUs">About Us</a></li>
                    <li><a href="~/Home/ContactUs">Contact Us</a></li>
                    <li><a href="~/Home/Login">Log In</a></li>
                    <li><a href="~/Home/Signup">Sign Up</a></li>

                </ul>
            </nav>
        </header>
        <h1 class="PageTitle">Create Personnel</h1>
    </div>

    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <label asp-for="StaffName" class="col-sm-3 col-form-label"></label>
                <input asp-for="StaffName" class="form-control" autocomplete="off" />
            </div>
            <span asp-validation-for="StaffName" class="text-danger"></span>

            <div class="row">
                <label asp-for="StaffId" class="col-sm-3 col-form-label"></label>
                <input asp-for="StaffId" class="form-control" autocomplete="off" />
            </div>
            <span asp-validation-for="StaffId" class="text-danger"></span>

            <div class="row">
                <label asp-for="Gender" class="col-sm-3 col-form-label"></label>
                <input asp-for="Gender" class="form-control" autocomplete="off" />
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>

            <div class="row">
                <label asp-for="EmailAddr" class="col-sm-3 col-form-label"></label>
                <input asp-for="EmailAddr" class="form-control" autocomplete="off" />
            </div>
            <span asp-validation-for="EmailAddr" class="text-danger"></span>

            <div class="row">
                <label asp-for="Vocation" class="col-sm-3 col-form-label"></label>
                <input asp-for="Vocation" class="form-control" autocomplete="off" />
            </div>
            <span asp-validation-for="Vocation" class="text-danger"></span>

            @*<div class="row">
                <label asp-for="DateEmployed" class="col-sm-3 col-form-label"></label>
                <input asp-for="DateEmployed" class="form-control" autocomplete="off" />
            </div>
            <span asp-validation-for="DateEmployed" class="text-danger"></span>*@

            <input type="submit" value="Create Staff" class="btn btn-dark" />
        </form>
        <span style="color: red;">@TempData["unsuccessful"]</span>

    </div>
</body>
</html>

