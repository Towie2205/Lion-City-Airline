@model IEnumerable<web2020apr_p08_t5.Models.FlightPersonnel>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewFlightPersonnel" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>StaffID</th>
                    <th>Staff Name</th>
                    <th>Gender</th>
                    <th>Date Employed</th>
                    <th>Vocation</th>
                    <th>Email Address</th>
                    <th>Password</th>
                    <th>Status</th>
                    @*<th>Status</th>*@
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.StaffId.ToString()</td>
                    <td>@item.StaffName</td>
                    <td>@item.Gender</td>
                    <td>@item.DateEmployed</td>
                    <td>@item.Vocation</td>
                    <td>@item.EmailAddr</td>
                    <td>@item.Password</td>
                    <td>@item.Status</td>
                    @*<td>@item.Status</td>*@

                    <td>
                        @*<a asp-action="Edit" asp-controller="Staff"
                            asp-route-id="@item.StaffId">Edit</a> |
                        <a asp-action="Details" asp-controller="Staff"
                            asp-route-id="@item.StaffId">Details</a> |*@
                        <a asp-action="Delete" asp-controller="FlightPersonnel"
                            asp-route-id="@item.StaffId">Delete</a>
                    </td>
                </tr>

                }
            </tbody>
        </table>
    </div>
}

else
{
    <span style="color:red">No record found!</span>
}
