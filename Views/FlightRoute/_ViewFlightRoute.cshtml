@model IEnumerable<web2020apr_p08_t5.Models.FlightRoute>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewFlightRoute" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>RouteID</th>
                    <th>Departure City</th>
                    <th>Departure Country</th>
                    <th>Arrival City</th>
                    <th>Arrival Country</th>
                    <th>Flight Duration</th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.RouteID.ToString()</td>
                    <td>@item.DepartureCity</td>
                    <td>@item.DepartureCountry</td>
                    <td>@item.ArrivalCity</td>
                    <td>@item.ArrivalCountry</td>
                    <td>@item.FlightDuration</td>

                    @*<td>
                        <a asp-action="Edit" asp-controller="FlightRoute"
                           asp-route-id="@item.RouteID">Edit</a> |
                        
                    </td>*@
                </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <span style="color:red">No record found!</span>
}
