@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <!-- Use Unicode character encoding - multi-language compatibity -->
    <meta charset="utf-8">

    <!-- Set the initial view zooming scale for mobile device -->
    <meta name="viewport" content="width = device-width, initial-scale = 1" />

    <title>Lion City Airline</title>

    <!-- Reference to customized styling for this website -->
    <link rel="stylesheet" type="text/css" href="~/css/Signup-style.css">

    <style>
        body {
            background-color: blanchedalmond;
        }
    </style>
</head>

<body>

    <div class="image-box">
        <img src="~/Images/login page image.png" style="width: 20%" />
    </div>

    


    <div class="box">
        <div class="col-md-8">
            <h1 class="PageTitle">S i g n   U p</h1>
            <hr class="bg-white"> <!-- nid change design ltr -->
        </div>
        <br />
        <form method="post" action="~/Staff/Index">
            <!-- need change later -->
            <div class="row">
                <div class="col-md-2"></div>

                <div class="form-group row">

                    <label class="col-md-4">
                        <br>
                        <input type="text" id="firstname" required="" placeholder=" Given/ First Name (in Passport)">
                    </label>

                </div>

                <div class="form-group row">
                    <label class="col-md-4">
                        <br>
                        <input type="text" id="last name" required="" placeholder=" Last Name (in Passport)">
                    </label>
                </div>

                <div class="form-group row">
                    <label class="col-md-4">
                        <br>
                        <input type="text" id="emailaddr" placeholder=" Email Address">
                    </label>
                </div>

                <div class="form-group row">
                    <label class="col-md-4">
                        <br>
                        <input type="text" id="phoneno" required="" placeholder="Phone Number">
                    </label>
                </div>

                <div class="form-group row">
                    <label class="col-md-4">
                        <br>
                        <input type="text" id="nationality" required="" placeholder="Nationality">
                    </label>
                </div>

            </div>

            <div class="row">
                <div class="col-md-2"></div>

                <label class="col-md-4">
                    <br>
                    Date Of Birth<br>
                </label>
                <label class="col-md-4">

                    <input type="text" id="date" required="" placeholder="DD">
                </label>

                <label class="col-md-4">

                    <input type="text" id="month" required="" placeholder="MM">
                </label>

                <label class="col-md-4">

                    <input type="text" id="year" required="" placeholder="YYYY">
                </label>


            </div>
            <br>
            <p style="margin-left:15%;color:royalblue;">Note: Default password will be assigned upon signing up.</p>
            <br>
            <div class="form-group row">
                <input type="checkbox">
                <label for=""> By checking this, you have argeed to the Terms and Conditions.</label><br>
            </div>
            <br>
            <input type="submit" id="btnUserLogin" class="myButton" value="Sign Up" />
        </form><br /><br />

    </div>

</body>
</html>
